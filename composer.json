{
    "name": "example/task-manager",
    "description": "Mid-level PHP task management application with database",
    "type": "project",
    "require": {
        "php": "^8.0",
        "ext-pdo": "*",
        "ext-json": "*"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5"
    },
    "scripts": {
        "start": "php -S localhost:8000 -t public",
        "test": "vendor/bin/phpunit --colors=always",
        "db-setup": "php -r \"require 'vendor/autoload.php'; require 'database.sql';\""
    }
}
